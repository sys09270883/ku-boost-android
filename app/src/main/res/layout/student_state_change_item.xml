<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/stateChangeCodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/applyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="@string/prompt_apply"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/applyDateTextView"
        app:layout_constraintEnd_toStartOf="@id/applyDateTextView"
        app:layout_constraintTop_toTopOf="@id/applyDateTextView" />

    <TextView
        android:id="@+id/applyDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/changedDateTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/changeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="@string/prompt_change"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/changedDateTextView"
        app:layout_constraintEnd_toStartOf="@id/changedDateTextView"
        app:layout_constraintTop_toTopOf="@id/changedDateTextView" />

    <TextView
        android:id="@+id/changedDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/applyDateTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>