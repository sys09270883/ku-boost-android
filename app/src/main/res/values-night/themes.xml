<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.KUBoost" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/hintColorDark</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="hintTextColor">@color/hintColorPrimary</item>
        <item name="boxStrokeColor">@color/hintColorDark</item>
        <item name="colorControlActivated">@color/hintColorDark</item>
        <item name="colorControlHighlight">@color/hintColorDark</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="passwordToggleTint">@color/hintColorLight</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textCursorDrawable">@color/hintColorPrimary</item>
    </style>
</resources>