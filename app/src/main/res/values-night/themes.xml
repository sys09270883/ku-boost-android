<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KUAlarmy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputLayoutTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/hintColorDark</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="hintTextColor">@color/hintColorPrimary</item>
        <item name="boxStrokeColor">@color/hintColorDark</item>
        <item name="colorControlActivated">@color/hintColorDark</item>
        <item name="colorControlHighlight">@color/hintColorDark</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="passwordToggleTint">@color/hintColorLight</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textCursorDrawable">@color/hintColorPrimary</item>
    </style>
</resources>